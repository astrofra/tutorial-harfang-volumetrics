    "version": "0.2.0",
    "configurations": [

		{
			"name": "Lua No Console",
			"type": "lua",
			"request": "launch",
			"stopOnEntry": false,
			"program": "${file}",
			"cwd": "${workspaceFolder}/",
			"luaexe": "${workspaceFolder}/bin/hg_lua-win-x64/lua.exe",
		},
		{
			"name": "Lua Console",
			"type": "lua",
			"request": "launch",
			"stopOnEntry": false,
			"program": "${file}",
			"cwd": "${workspaceFolder}/",
			"arg": ["--noAAA"],
			"luaexe": "${workspaceFolder}/bin/hg_lua-win-x64/luad.exe",
		}
    ]
}